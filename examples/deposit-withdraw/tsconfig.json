{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "es6"
    ],
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@axiom-crypto/keystore-sdk/*": [
        "../../src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "emitDeclarationOnly": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "test",
    "node_modules",
    "scripts",
    "src/scaffold/templates/*"
  ],
  "ts-node": {
    "esm": true
  }
}