{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "lib": [
        "es2020",
        "es6"
      ],
      "preserveSymlinks": true,
      "preserveWatchOutput": true,
      "pretty": false,
      "strict": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "types": [
        "node",
        "jest"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "test/**/*.ts",
      "test/**/*.json",
    ],
    "exclude": [
      "dist",
      "node_modules",
      "scripts",
      "src/scaffold/templates/*"
    ],
    "ts-node": {
      "esm": true
    }
  }
    